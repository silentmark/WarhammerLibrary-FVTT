<section class="tab {{tab.cssClass}}" data-group="primary" data-tab="{{tab.id}}">

    <div class="report-container standard-form">

        <div class="form-group">
            <label>{{localize "WH.BugReporter.Form.Title"}}</label>
            <div class="form-fields">
                <input type="text" name="title" placeholder="Concise description of issue/bug/request">
            </div>
        </div>

        <div class="form-group">
            <label>{{localize "WH.BugReporter.Form.Type"}}</label>
            <div class="form-fields">
                <select name="type">
                    <option value=""></option>
                    <option value="bug">Bug</option>
                    <option value="data">Data or Text</option>
                    <option value="script">Effect Script</option>
                    <option value="enhancement">Feature Request</option>
                </select>
            </div>
        </div>

        <div class="form-group">
            <label>{{localize "WH.BugReporter.Form.Module"}}</label>
            <div class="form-fields">
                <select name="module">
                    {{selectOptions modules blank=""}}
                </select>
            </div>
        </div>

        <div class="form-group">
            <label>{{localize "WH.BugReporter.Form.Contact"}}</label>
            <div class="form-fields">
                <input type="text" name="contact" placeholder="Discord or Email" value="{{settings.contact}}">
            </div>
        </div>
        
        <div class="form-group">
            <label data-tooltip="Optionally add your Personal Access Token for your GitHub Account, creating the issue as that account.">{{localize "WH.BugReporter.Form.PAT"}} <i class="fa-regular fa-circle-question"></i></label>
            <div class="form-fields">
                <input type="password" name="PAT" placeholder="" autocomplete="new-password" value="{{settings.PAT}}">
            </div>
        </div>

        <div class="issues">
            <p class="centered">Has your issue already been submitted?</p>
            <div class="list">

            </div>
        </div>

        <div class="form-group stacked">
            <label>{{localize "WH.BugReporter.Form.Description"}}</label>
            <div class="form-fields">
                <textarea name="description" placeholder="What happened, how to reproduce, etc."></textarea>
            </div>
        </div>        
    </div>

    <button>{{localize "Submit"}}</button>
</section>